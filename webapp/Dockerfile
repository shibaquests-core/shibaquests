FROM node:18-alpine3.17 as build

ARG VITE_API_BASE_URL
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL

ARG VITE_PINATA_TOKEN
ENV VITE_PINATA_TOKEN=$VITE_PINATA_TOKEN

ARG VITE_PINATA_GATEWAY
ENV VITE_PINATA_GATEWAY=$VITE_PINATA_GATEWAY

ARG VITE_WEB3_MODAL_PROJECT_ID
ENV VITE_WEB3_MODAL_PROJECT_ID=$VITE_WEB3_MODAL_PROJECT_ID

ARG VITE_EXPLORER_URL
ENV VITE_EXPLORER_URL=$VITE_EXPLORER_URL

ARG VITE_FACTORY_ADDRESS
ENV VITE_FACTORY_ADDRESS=$VITE_FACTORY_ADDRESS

ARG VITE_BASIC_QUEST_FACTORY_ADDRESS
ENV VITE_BASIC_QUEST_FACTORY_ADDRESS=$VITE_BASIC_QUEST_FACTORY_ADDRESS

WORKDIR /app
COPY . /app

RUN npm install
RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
RUN rm /etc/nginx/conf.d/default.conf
COPY nginx.conf /etc/nginx/conf.d
EXPOSE 80
CMD ["nginx","-g","daemon off;"]
